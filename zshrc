export TOP_DIR=$(git rev-parse --show-toplevel)

# kubernetes
alias kube_drain='kubectl drain --ignore-daemonsets --delete-emptydir-data'
alias kube_cordon='kubectl cordon'
alias fluxlogs='kubectl logs -n flux -f -l app=flux --since 5m'
alias fluxlogsbee='kubectl logs -n flux -f -l app=flux -c flux --since 5m'
alias kube_api_version='for kind in `kubectl api-resources | tail +2 | awk "{ print $1 }"`; do kubectl explain $kind; done | grep -e "KIND:" -e "VERSION:"'

kube_get_job_images () {
  kubectl get jobs --all-namespaces -o jsonpath="{..image}" | tr -s '[[:space:]]' '\n' | sort | uniq -c
}

kube_get_pod_images () {
  kubectl get pod --all-namespaces -o jsonpath="{..image}" | tr -s '[[:space:]]' '\n' | sort | uniq -c
}

node_last_octets () {
  kubectl --skip-headers get no | cut -f 5 -d- | sort -n
}

# docker
alias docker_kill='docker kill $(docker ps -qa)'
alias docker_rm='docker rm $(docker ps -qa)'
alias docker_rmi='docker rmi -f $(docker images -q)'

